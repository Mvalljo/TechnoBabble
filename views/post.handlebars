<div class="card mb-4 post text-center">
  <div class="card-header">
    <h2>{{title}}</h2>
    <p class="text-secondary">Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">
      {{content}}
    </p>
  </div>
  <button class="btn btn-primary">Comment on this post</button>
  </p>
</div>