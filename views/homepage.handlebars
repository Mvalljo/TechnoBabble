<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="card mb-4 post">
  <div class="card-header">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="text-secondary">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}